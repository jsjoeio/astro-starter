---
import { Markdown } from 'astro/components';
import BaseHead from '../components/BaseHead.tsx';
import BlogPost from '../components/BlogPost.tsx';

const {content} = Astro.props;
const {title, description, publishDate, author, heroImage, permalink, alt, html} = content;
---
<!DOCTYPE html>
<html lang={ content.lang || 'en' }>
  <head>
    <BaseHead title={title} description={description} permalink={permalink} ogImageUrl={heroImage} publishDate={publishDate} canonicalURL={Astro.request.canonicalURL} articleSchema />
  </head>

  <body>
    <!-- <Header /> -->
    <main>
      <BlogPost title={title} author={author} heroImage={heroImage} publishDate={publishDate} alt={alt} html={html} />
    </main>
    <!-- <Footer/> -->
  </body>
</html>


---
import { Markdown } from 'astro/components';
import BaseHead from '../components/BaseHead.tsx';
import BlogPost from '../components/BlogPost.tsx';

const {content} = Astro.props;
const {title, description, date, tags, tagline, slug, content: { html }} = content;
// TODO@jsjoeio replace with package that generates it
const ogImageUrl = ""
---
<!DOCTYPE html>
<html lang={ content.lang || 'en' }>
  <head>
    <BaseHead title={title} description={description} permalink={Astro.request.canonicalURL} ogImageUrl={ogImageUrl} date={date} canonicalURL={Astro.request.canonicalURL} articleSchema />
  </head>

  <body>
    <!-- <Header /> -->
    <main>
      <BlogPost title={title} date={date} html={html} />
    </main>
    <!-- <Footer/> -->
  </body>
</html>

